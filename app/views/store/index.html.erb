<h1>Store#index</h1>
<p>Find me in app/views/store/index.html.erb</p>

<table class="table table-responsive">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image url</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    number_to_currency(product.price)
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.image_url %></td>
        <td><%= product.price %></td>
        <td><%= button_to 'Add to Cart', line_items_path(product_id: product) %></td>
        <td><%= link_to 'Show', product , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Edit', edit_product_path(product) , class:"btn btn-xs btn-danger" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-xs btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
